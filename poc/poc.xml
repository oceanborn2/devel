  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_poc.xml"/>
  
  <import file="${basedir}/wsmock/module_wsmock.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.poc, clean.module.wsmock, clean.artifact.wsmock:war_exploded" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.poc, compile.module.wsmock" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.wsmock:war_exploded" value="${basedir}/out/artifacts/wsmock_war_exploded"/>
    <mkdir dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="clean.artifact.wsmock:war_exploded" description="clean wsmock:war exploded artifact output">
    <delete dir="${artifact.output.wsmock:war_exploded}"/>
  </target>
  
  <target name="artifact.wsmock:war_exploded" depends="init.artifacts, compile.module.wsmock" description="Build &#39;wsmock:war exploded&#39; artifact">
    <mkdir dir="${artifact.output.wsmock:war_exploded}"/>
    <copy todir="${artifact.output.wsmock:war_exploded}">
      <fileset dir="${basedir}/wsmock/web"/>
    </copy>
    <mkdir dir="${artifact.output.wsmock:war_exploded}/WEB-INF"/>
    <copy file="${basedir}/wsmock/web/WEB-INF/web.xml" tofile="${artifact.output.wsmock:war_exploded}/WEB-INF/web.xml"/>
    <mkdir dir="${artifact.output.wsmock:war_exploded}/WEB-INF"/>
    <mkdir dir="${artifact.output.wsmock:war_exploded}/WEB-INF/classes"/>
    <copy todir="${artifact.output.wsmock:war_exploded}/WEB-INF/classes">
      <fileset dir="${wsmock.output.dir}"/>
    </copy>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.wsmock:war_exploded" description="Build all artifacts">
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
