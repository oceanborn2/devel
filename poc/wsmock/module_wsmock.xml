<?xml version="1.0" encoding="UTF-8"?>
<project name="module_wsproxy" default="compile.module.wsmock">
  <dirname property="module.wsmock.basedir" file="/module_wsproxy.xml"/>
  
  <property name="module.jdk.home.wsmock" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.wsmock" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.wsmock" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.wsmock" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="wsmock.output.dir" value="${module.wsmock.basedir}/../out/production/wsproxy"/>
  <property name="wsmock.testoutput.dir" value="${module.wsmock.basedir}/../out/test/wsproxy"/>
  
  <path id="wsmock.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="wsmock.module.production.classpath">
    <path refid="${module.jdk.classpath.wsmock}"/>
    <path refid="library.groovy-2.3.9.classpath"/>
    <path refid="library.jax-ws-glassfish_/_jax-ws_2.2_ri_/_metro_1.x_/_jwsdp_2.2.classpath"/>
  </path>
  
  <path id="wsmock.runtime.production.module.classpath">
    <pathelement location="${wsmock.output.dir}"/>
    <path refid="library.groovy-2.3.9.classpath"/>
    <path refid="library.jax-ws-glassfish_/_jax-ws_2.2_ri_/_metro_1.x_/_jwsdp_2.2.classpath"/>
  </path>
  
  <path id="wsmock.module.classpath">
    <path refid="${module.jdk.classpath.wsmock}"/>
    <pathelement location="${wsmock.output.dir}"/>
    <path refid="library.groovy-2.3.9.classpath"/>
    <path refid="library.jax-ws-glassfish_/_jax-ws_2.2_ri_/_metro_1.x_/_jwsdp_2.2.classpath"/>
  </path>
  
  <path id="wsmock.runtime.module.classpath">
    <pathelement location="${wsmock.testoutput.dir}"/>
    <pathelement location="${wsmock.output.dir}"/>
    <path refid="library.groovy-2.3.9.classpath"/>
    <path refid="library.jax-ws-glassfish_/_jax-ws_2.2_ri_/_metro_1.x_/_jwsdp_2.2.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.wsmock">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.wsmock">
    <patternset refid="excluded.from.module.wsmock"/>
  </patternset>
  
  <path id="wsmock.module.sourcepath">
    <dirset dir="${module.wsmock.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.wsmock" depends="compile.module.wsmock.production,compile.module.wsmock.tests" description="Compile module wsmock"/>
  
  <target name="compile.module.wsmock.production" depends="register.custom.compilers" description="Compile module wsmock; production classes">
    <mkdir dir="${wsmock.output.dir}"/>
    <javac2 destdir="${wsmock.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.wsmock}/javac">
      <compilerarg line="${compiler.args.wsmock}"/>
      <bootclasspath refid="wsmock.module.bootclasspath"/>
      <classpath refid="wsmock.module.production.classpath"/>
      <src refid="wsmock.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.wsmock"/>
    </javac2>
    
    <copy todir="${wsmock.output.dir}">
      <fileset dir="${module.wsmock.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.wsmock.tests" depends="register.custom.compilers,compile.module.wsmock.production" description="compile module wsmock; test classes" unless="skip.tests"/>
  
  <target name="clean.module.wsmock" description="cleanup module">
    <delete dir="${wsmock.output.dir}"/>
    <delete dir="${wsmock.testoutput.dir}"/>
  </target>
</project>